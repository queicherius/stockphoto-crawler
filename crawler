$collection->add(new Stockphotos\GetrefeCrawler);
$collection->add(new Stockphotos\PicjumboCrawler);
$collection->add(new Stockphotos\PatternlibraryCrawler);
$collection->add(new Stockphotos\NewoldstockCrawler);
$collection->add(new Stockphotos\SuperfamousCrawler);

/*
