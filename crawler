<?php

require_once "application/Autoloader.php";

// Set log mode
Console\Console::$disabled = ['DEBUG', 'WARNING'];

$collection = new CrawlerCollection();
$collection->setBaseFolder('contents');

// Add crawlers
$collection->add(new Stockphotos\LittleVisualsCrawler);
$collection->add(new Stockphotos\UnsplashCrawler);
$collection->add(new Stockphotos\GratisographyCrawler);
$collection->add(new Stockphotos\GetrefeCrawler);
$collection->add(new Stockphotos\PicjumboCrawler);
$collection->add(new Stockphotos\PatternlibraryCrawler);
$collection->add(new Stockphotos\NewoldstockCrawler);
$collection->add(new Stockphotos\SuperfamousCrawler);

// Run crawlers
$collection->run();

// Licences
$collection->licences('LICENCES.md');